{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "module": "es6",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./",
    "lib": ["dom", "es6"],
    "stripInternal": true,
        "typeRoots": [
      "./node_modules/@types",
      "./node_modules",
      "./node_modules/@ngx-translate",
      "./node_modules/@angular"
    ],
    "types": [
      "node"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
